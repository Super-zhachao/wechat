<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:padding="25dip"
    tools:context=".RegisterActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dip"
        android:layout_marginTop="40dip"
        android:text="账户注册"
        android:textColor="#353535"
        android:textSize="23sp"
        android:textStyle="normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dip"
        android:layout_marginTop="20dip"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称"
            android:textColor="#353535"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edit_nick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:background="@null"
            android:hint="请输入昵称"
            android:inputType="text"
            android:singleLine="true" />
    </LinearLayout>

    <TextView
        android:id="@+id/hr3"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#E5E6E6"
        android:text="TextView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dip"
        android:layout_marginTop="20dip"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_uname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="学号"
            android:textColor="#353535"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edit_uid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:background="@null"
            android:hint="请输入学号"
            android:inputType="number"
            android:singleLine="true" />
    </LinearLayout>

    <TextView
        android:id="@+id/hr1"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#E5E6E6"
        android:text="TextView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dip"
        android:layout_marginTop="20dip"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_upw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码"
            android:textColor="#353535"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edit_upw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:background="@null"
            android:hint="请输入登录密码"
            android:inputType="text"
            android:singleLine="true" />
    </LinearLayout>

    <TextView
        android:id="@+id/hr2"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#E5E6E6"
        android:text="TextView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dip"
        android:layout_marginTop="20dip"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/rg_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="性别"
                android:textColor="#353535"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/rb_boy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:text="男"
                android:checked="true"
                android:textColor="#353535"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/rb_girl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:layout_below="@id/rb_boy"
                android:text="女"
                android:textColor="#353535"
                android:textSize="18sp" />
        </RadioGroup>
    </LinearLayout>


    <TextView
        android:id="@+id/hr4"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#E5E6E6"
        android:text="TextView" />

    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dip"
        android:background="@drawable/buttonshape"
        android:text="注  册"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textStyle="normal" />

</LinearLayout>